<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dabfac"
    app:layoutDescription="@xml/activity_schermata_di_gioco_scene"
    tools:context=".game_form">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/immagine_per_monopoly"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/buttonplayer_1"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:text="player_1"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/contoplayer_1"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:text="contoplayer_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonplayer_1" />

    <Button
        android:id="@+id/buttonplayer_2"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFEB3B"
        android:text="player_2"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contoplayer_2"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:text="contoplayer_2"
        app:layout_constraintBottom_toTopOf="@+id/buttonplayer_2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonplayer_3"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:text="player_3"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_contoplayer_3"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:text="contoplayer_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonplayer_3" />


    <Button
        android:id="@+id/buttonplayer_4"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#8BC34A"
        android:text="player_4"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/label_contoplayer_4"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="contoplayer_4"
        app:layout_constraintBottom_toTopOf="@+id/buttonplayer_4"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/contratta_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contrattazione"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/azioni_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="azioni"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="132dp" />

    <Button
        android:id="@+id/casella_1"
        android:layout_width="29dp"
        android:layout_height="52dp"
        android:layout_marginStart="572dp"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="290dp"
        android:alpha="0"
        android:background="#19CD21"
        android:backgroundTint="#E53935"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>